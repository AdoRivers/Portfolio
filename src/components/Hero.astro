import MailIcon from "./icons/Mail.astro"
import SocialPill from "./SocialPill.astro"
---

<div class="max-w-xl">
    <div class="flex gap-4 mb-4">
      <img
        class="rounded-full size-34 mb-4 flex flex-row shadow-lg"
        src="/AdoPic.webp"
        alt={personalImageAlt}
      />
      <h1
      class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
      >
      Adolfo Juárez Rivera
    </h1>
  </div>
  <div class="flex items-center justify-between flex-wrap gap- sm:gap-0">
    <h3 class="currentColor text-xl lg:text-2xl text-wrap"> Ing. En Sistemas Computacionales
    </h3>
    <a
      href="https://www.linkedin.com/in/adojuarezriv/"
      target="__blank"
      rel="noopener"
      class="inline-flex items-center transition md:justify-center md:hover:scale-105"
      >
      <Badge>Disponible para trabajar</Badge>
    </a>
    </div>
    <h2 class="currentColor text-xl lg:text-2xl text-wrap max-w-[700px] py-5">
        <span class="text-red-200/90">¡Hola!</span>
        <span class="text-white">Soy apasionado por el</span> 
        <span class="text-yellow-200/90">Desarrollo Web y Móvil.</span>
        Más cuando se trata de <span class="text-blue-200/90">frontend.</span>
        Espero convertirme en <span class="text-yellow-200/90"><strong>Desarrollador fullstack.</strong></span>
      </h2>
    <nav class="flex flex-wrap gap-4 mt-8">
      <SocialPill href="mailto:miduga@gmail.com">
        <MailIcon class="size-4" />
        Contáctame
      </SocialPill>
      <SocialPill href="https://linkedin.com/in/midudev">
        <LinkedInIcon class="size-4" />
        LinkedIn
      </SocialPill>
    </nav>
  </div>